doctype html
head
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1' crossorigin='anonymous')
.container
  nav.nav.nav-pills.nav-fill
    a.nav-link.active(aria-current='page' href='/admin') Home
  .row.mt-5
    .col-12.p-5
      // button create user
      button.m-2.btn.btn-primary(type='button' data-bs-toggle='modal' data-bs-target='#createUserModal') Create User
      // modal create user
      #createUserModal.modal.fade(tabindex='-1' role='dialog' aria-labelledby='exampleModalLabel')
        .modal-dialog(role='document')
          .modal-content
            .modal-header
              h5#createUserModalLabel.modal-title Create User
              button.btn-close(type='button' data-bs-dismiss='modal' aria-label='Close')
            .modal-body
              form(action='/createUser', method='POST')
                .mb-3
                  label.form-label(for='userNameInput') Email address
                  input#userNameInput.form-control(type='text', name='username')
                .mb-3
                  label.form-label(for='passwordInput') Password
                  input#passwordInput.form-control(type='text', name='password')
                button.btn.btn-primary(type='submit') Submit
      // button create subject
      button.m-2.btn.btn-primary(type='button' data-bs-toggle='modal' data-bs-target='#createSubjectModal') Create Subject
      // modal create subject
      #createSubjectModal.modal.fade(tabindex='-1' role='dialog' aria-labelledby='createSubjectModalLabel')
        .modal-dialog(role='document')
          .modal-content
            .modal-header
              h5#createSubjectModalLabel.modal-title Create Subject
              button.btn-close(type='button' data-bs-dismiss='modal' aria-label='Close')
            .modal-body
              form(action="/createSubject",method="POST")
                .mb-3
                  label.form-label(for='nameSubjectInput') Name Subject
                  input#nameSubjectInput.form-control(type='text', name='subject')
                button.btn.btn-primary(type='submit') Submit
      // button create test
      button.m-2.btn.btn-primary(type='button' data-bs-toggle='modal' data-bs-target='#createTestModal') Create Test
      // modal create test
      #createTestModal.modal.fade(tabindex='-1' role='dialog' aria-labelledby='createTestModalLabel')
        .modal-dialog(role='document')
          .modal-content
            .modal-header
              h5#createTestModalLabel.modal-title Create Test
              button.btn-close(type='button' data-bs-dismiss='modal' aria-label='Close')
            .modal-body
              form(action='/createTest', method='POST')
                .mb-3
                  label.form-label(for='nameTestInput') Name Test
                  input#nameTestInput.form-control(type='text', name='test')
                  label.form-label(for='selectSubject') Subject
                  select#selectSubject.form-select.form-label(aria-label='.form-select-sm example', name='sub')
                    option(selected='',disabled) Seclect Subject
                    each val in data[1].data.data
                      option(value=val[0])=val[1]
                  label.form-label(for='hour') Time
                  input#hour.form-control.mb-3(type='number', name='hour',placeholder='Hour')
                  input#hour.form-control.mb-3(type='number', name='minute',placeholder='Minute')
                  input#hour.form-control(type='number', name='seconds',placeholder='Seconds')
                button.btn.btn-primary(type='submit') Submit
  .row.mt-5
    .d-flex.justify-content-center.align-items-center(style='height:100px;')
      div(style='font-size: 80px;') WEB CREATE TEST ONLINE
  .row.mt-5
    .col-4
      div(style='font-size: 30px; text-align:center;') USER
      table.table.table-bordered
        thead
          tr
            th(scope='col') #
            th(scope='col') username
            th(scope='col') password
            th(scope='col') Handle
        tbody
          - var n = 1;
          each val in data[0].data.data
            tr
              th(scope='row')=n++
              td=val[1]
              td=val[2]
              td @mdo

    .col-4
      div(style='font-size: 30px; text-align:center;') SUBJECT
      table.table.table-bordered
        thead
          tr
            th(scope='col') #
            th(scope='col') name
            th(scope='col') Handle
        tbody
          - var n = 1;
          each val in data[1].data.data
            tr
              th(scope='row')=n++
              td=val[1]
              td Otto
    .col-4
      div(style='font-size: 30px; text-align:center;') TEST
      table.table.table-bordered
        thead
          tr
            th(scope='col') #
            th(scope='col') name
            th(scope='col') Handle
        tbody
          - var n = 1;
          each val in data[2].data.data
            tr
              th(scope='row')=n++
              td
                a(href="/test?id=" + val[0])=val[2]
              td Otto
